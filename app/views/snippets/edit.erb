<div class="container pt-2">
  <form class="form-horizontal" action="/snippets/<%= @snippet.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="PATCH">

    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Name</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" value="<%= @snippet.name  %>">
      </div>
    </div>

    <div class="form-group">
      <label for="language" class="col-sm-2 control-label">Language</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="language" value="<%= @snippet.language  %>">
      </div>
    </div>

    <div class="form-group">
      <label for="content" class="col-sm-2 control-label">Content</label>
      <div class="col-sm-10">
        <textarea class="form-control code-input-box" id="content" name="content" rows="3"><%= @snippet.content %></textarea>
      </div>
    </div>

    <div class="form-group pl-3">
      <div class="row">
        <label for="labels" class="col-sm-4 control-label">Labels <small>(hold control for multiple)</small></label>
        <label for="new_label" class="col-sm-4 control-label">New Label</label>
      </div>
      <div class="row">
        <div class="col-sm-4">
          <select class="custom-select" name="labels[]" id="labels" multiple >
            <% @labels.each do |label| %>
            <option <%= "selected" if @snippet.label_ids.include?(label.id) %>> <%=label.name%></option>
            <% end %>
          </select>
          </div>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="new_label" placeholder="New Label">
          </div>
      </div>
    </div>

    <div class="form-group">
      <label for="content" class="col-sm-2 control-label">Access Level</label>
      <div class="col-sm-2">
        <select class="form-control" name="access_level">
          <option>Private</option>
          <option <%= "selected" if @snippet.access_level == "Public" %>>Public</option>
        </select>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" id="submit" class="pink-signin-btn btn btn-default">Update</button>
      </div>
    </div>
  </form>
</div>
